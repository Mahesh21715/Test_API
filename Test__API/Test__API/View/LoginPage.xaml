        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />

            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Label  
                Grid.Row="0"
                Grid.ColumnSpan="3"
                Text="Log In to Your MMI Acount"  
                HorizontalOptions="CenterAndExpand"
                FontSize="Large"
                FontAttributes="Bold"
                TextColor="Black"/>

            <Label  Grid.Row="2"
                Grid.ColumnSpan="3"
                Text="* Username"
                FontSize="Medium"
                TextColor="Black"/>

            <local:MyEntry Grid.Row="3"
               Grid.ColumnSpan="3"
               x:Name = "UserId"             
               TextColor="Black"
               Text="{Binding UserId}"    
               FontSize="Medium"
               Keyboard = "Email"
               />


            <Label  Grid.Row="4"
                Grid.ColumnSpan="3"
                Text="* Password" 
                FontSize="Medium"
                TextColor="Black"/>

            <local:MyEntry 
                Grid.Row="5"
                Grid.ColumnSpan="3"
                x:Name = "Password" 
                TextColor="Black"
                Text="{Binding Password}"    
                Keyboard = "Email">
            </local:MyEntry>

            <Switch Grid.Row="6" 
                Grid.Column="0"
                HorizontalOptions="Start"
                IsToggled="False"/>

            <Label  Grid.Row="6"
                Grid.Column="1"
                Text="Remenber Me"
                FontSize="Small"
                HorizontalTextAlignment="Start"
                VerticalTextAlignment="Center"
                TextColor="Black"/>

            <Label  Grid.Row="7"
                Grid.ColumnSpan="3"
                Text="Forgot Username"
                FontSize="Small"
                TextColor="Black"/>

            <Label  Grid.Row="8"
                Grid.ColumnSpan="3"
                Text="Forgot Passsword"
                FontSize="Small"
                TextColor="Black"/>

            <Button Grid.Row="9"
                Grid.ColumnSpan="3"
                x:Name= "Loginbtn"
                Text = "Login"   
                Command="{Binding LoginCommand}" 
                HorizontalOptions = "FillAndExpand"
                VerticalOptions="End"
                CornerRadius="10"
                BackgroundColor="#ff8000"
                />
        </Grid>
</ContentPage>